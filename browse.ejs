<!-- Profile Modal -->
<div id="profileModal" class="profileModal">
    <span id="closeModal">&times;</span>
    <i class="fa-solid fa-circle-user"></i>
    <p><strong>Username:</strong> <span id="modalUsername"></span></p>
    <p><strong>User ID:</strong> <span id="modalUserId"></span></p>
    <p><strong>Email:</strong> <span id="modalEmail"></span></p>
</div>
<div id="modalBackdrop"></div>
<script>
    const profileBtn = document.getElementById('profileBtn');
    const profileModal = document.getElementById('profileModal');
    const closeModal = document.getElementById('closeModal');
    const modalBackdrop = document.getElementById('modalBackdrop');
    
    profileModal.style.display = 'none';
    modalBackdrop.style.display = 'none';

    profileBtn.addEventListener('click', () => {
        fetch('/profile')
            .then(res => res.json())
            .then(data => {
                document.getElementById('modalUsername').textContent = data.username;
                document.getElementById('modalUserId').textContent = data.user_id;
                document.getElementById('modalEmail').textContent = data.email;
                profileModal.style.display = 'block';
                modalBackdrop.style.display = 'block';
            })
            .catch(err => {
                console.error('Error loading profile:', err);
                alert('Failed to load profile info.');
            });
    });

    closeModal.addEventListener('click', () => {
        profileModal.style.display = 'none';
        modalBackdrop.style.display = 'none';
    });

    modalBackdrop.addEventListener('click', () => {
        profileModal.style.display = 'none';
        modalBackdrop.style.display = 'none';
    });
</script>


    <script>
        let currentPage = 1;
        let currentQuery = "";
    
        const USER_ID = "<%= user_id %>";
        const USERNAME = "<%= username %>";
    
        function loadSearchResults(reset = false) {
            if (!currentQuery) return;
    
            fetch(`/search?q=${encodeURIComponent(currentQuery)}&page=${currentPage}`)
                .then(response => response.json())
                .then(data => {
                    const bookResults = document.getElementById("book-results");
                    if (reset) bookResults.innerHTML = "";
    
                    if (data.success && data.books.length > 0) {
                        data.books.forEach(book => {
                            let bookCard = `
                                <div class="book-card">
                                    <div style="display: flex; gap: 15px;">
                                        <img src="${book.cover_image ? book.cover_image : 'default-cover.jpg'}" alt="Book Cover">
                                        <div class="book-details">
                                            <div class="book-title">${book.title}</div>
                                            <div class="book-info"><strong>Author:</strong> ${book.author}</div>
                                            <div class="book-info"><strong>Publisher:</strong> ${book.publisher}</div>
                                            <div class="book-info"><strong>Published Year:</strong> ${book.published_year}</div>
                                            <div class="book-info"><strong>Book_ID:</strong> ${book.book_id}</div>
                                        </div>
                                    </div>
                                    <form action="/borrow" method="POST" style="margin-left: 20px;">
                                        <input type="hidden" name="user_id" value="${USER_ID}">
                                        <input type="hidden" name="username" value="${USERNAME}">
                                        <input type="hidden" name="book_id" value="${book.book_id}">
                                        <input type="hidden" name="book_name" value="${book.title}">
                                        <button type="submit" class="btn">Borrow</button>
                                    </form>
                                </div>
                            `;
                            bookResults.innerHTML += bookCard;
                        });
    
                        if (data.hasMore) {
                            document.getElementById("show-more").style.display = "block";
                        } else {
                            document.getElementById("show-more").style.display = "none";
                        }
                    } else {
                        if (reset) bookResults.innerHTML = "<p>No books found</p>";
                        document.getElementById("show-more").style.display = "none";
                    }
                })
                .catch(error => console.error("Error fetching search results:", error));
        }
    
        // Search button click
        document.getElementById("search-btn").addEventListener("click", function () {
            currentQuery = document.getElementById("search-input").value.trim();
            currentPage = 1;
            loadSearchResults(true);
        });
    
        // Enter key triggers search
        document.getElementById("search-input").addEventListener("keyup", function (event) {
            if (event.key === "Enter") {
                document.getElementById("search-btn").click();
            }
        });
    
        // Show more button
        document.getElementById("show-more").addEventListener("click", () => {
            currentPage++;
            loadSearchResults();
        });
    </script>
        
